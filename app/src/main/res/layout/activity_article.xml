<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Activities.ArticleActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/activity_toolbar"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10sp"
            android:weightSum="5">

            <ImageView
                android:layout_width="0sp"
                android:layout_height="60sp"
                android:src="@drawable/profilepic"
                android:layout_weight="1"
                android:layout_marginTop="10sp"/>

            <TextView
                android:layout_width="0sp"
                android:layout_height="60sp"
                android:layout_weight="4"
                android:layout_marginTop="10sp"
                android:gravity="center_vertical"
                android:text="Keanu Reeves"
                android:textColor="#000"
                android:textSize="15sp"/>

        </LinearLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:layout_margin="10sp"
            android:background="@drawable/gray_border"
            android:padding="10sp"
            app:hintTextAppearance="@color/colorPrimary"
            android:layout_gravity="center">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:background="@android:color/transparent"
                android:hint="Title"
                android:padding="5sp"
                android:inputType="text"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:layout_margin="10sp"
            android:background="@drawable/gray_border"
            android:padding="10sp"
            app:hintTextAppearance="@color/colorPrimary"
            android:layout_gravity="center">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:background="@android:color/transparent"
                android:hint="Short Description"
                android:padding="5sp"
                android:inputType="text"/>

        </android.support.design.widget.TextInputLayout>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="200sp"
            android:background="@drawable/gray_border"
            android:padding="15sp"
            android:inputType="text"
            android:layout_margin="10sp"
            android:gravity="top"/>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:layout_margin="10sp"
            android:background="@drawable/gray_border"
            android:padding="10sp"
            app:hintTextAppearance="@color/colorPrimary"
            android:layout_gravity="center">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:background="@android:color/transparent"
                android:hint="Tags | Separate tags with commas"
                android:padding="5sp"
                android:inputType="text"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:layout_margin="10sp"
            android:background="@drawable/gray_border"
            android:padding="10sp"
            app:hintTextAppearance="@color/colorPrimary"
            android:layout_gravity="center">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:background="@android:color/transparent"
                android:hint="Select Banner Image"
                android:padding="5sp"
                android:inputType="text"/>

        </android.support.design.widget.TextInputLayout>

        <Button
            android:layout_width="100sp"
            android:layout_height="60sp"
            android:background="@drawable/sqr_factor_btn_color"
            android:text="Save"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:layout_margin="10sp"
            android:layout_gravity="center"/>

    </LinearLayout>

</ScrollView>