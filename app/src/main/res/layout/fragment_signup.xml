<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.SignupFragment"
    android:orientation="vertical"
    android:focusableInTouchMode="true">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_marginStart="10sp"
        android:layout_marginBottom="10sp"
        android:layout_marginTop="25sp"
        android:text="Register to Square Factor"
        android:textSize="20sp"
        android:textColor="#000000"
        android:padding="10sp" />

    <Spinner
        android:id="@+id/user"
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:layout_margin="10sp"
        android:foreground="@drawable/gray_border"
        android:padding="5sp"
        android:entries="@array/user_choices"/>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:layout_margin="10sp"
        android:background="@drawable/gray_border"
        android:padding="5sp"
        app:hintTextAppearance="@style/TextAppearance.AppCompat.Small">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:background="@android:color/transparent"
            android:hint="First Name"
            android:padding="5sp" />


    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:layout_margin="10sp"
        android:background="@drawable/gray_border"
        android:padding="5sp"
        app:hintTextAppearance="@style/TextAppearance.AppCompat.Small">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:background="@android:color/transparent"
            android:hint="Last Name"
            android:padding="5sp" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:layout_margin="10sp"
        android:background="@drawable/gray_border"
        android:padding="5sp"
        app:hintTextAppearance="@style/TextAppearance.AppCompat.Small">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:background="@android:color/transparent"
            android:hint="Username"
            android:padding="5sp" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:layout_margin="10sp"
        android:background="@drawable/gray_border"
        android:padding="5sp"
        app:hintTextAppearance="@style/TextAppearance.AppCompat.Small">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:background="@android:color/transparent"
            android:hint="Your email"
            android:padding="5sp"
            android:inputType="textEmailAddress"/>

    </android.support.design.widget.TextInputLayout>

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:layout_margin="10sp"
        android:foreground="@drawable/gray_border"
        android:padding="5sp"
        android:entries="@array/countries"/>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:layout_margin="10sp"
        android:background="@drawable/gray_border"
        android:padding="5sp"
        app:hintTextAppearance="@style/TextAppearance.AppCompat.Small">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:background="@android:color/transparent"
            android:hint="Mobile No."
            android:padding="5sp"
            android:inputType="number"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:layout_margin="10sp"
        android:background="@drawable/gray_border"
        android:padding="5sp"
        app:hintTextAppearance="@style/TextAppearance.AppCompat.Small">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:background="@android:color/transparent"
            android:hint="Your Password"
            android:padding="5sp"
            android:inputType="textPassword"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:layout_margin="10sp"
        android:background="@drawable/gray_border"
        android:padding="5sp"
        app:hintTextAppearance="@style/TextAppearance.AppCompat.Small">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:background="@android:color/transparent"
            android:hint="Confirm Password"
            android:padding="5sp"
            android:inputType="textPassword"/>

    </android.support.design.widget.TextInputLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/loginbtn"
        android:text="Complete Registration!"
        android:textSize="15sp"
        android:textColor="#ffffff"
        android:layout_margin="10sp"
        android:layout_gravity="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:layout_marginTop="20sp"
        android:layout_marginBottom="20sp"
        android:gravity="center"
        android:text="OR"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/fbcolor"
        android:text="Login with Facebook"
        android:textSize="15sp"
        android:textColor="#ffffff"
        android:layout_margin="10sp"
        android:layout_gravity="center"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/googlepluscolor"
        android:text="Login with Google Plus"
        android:textSize="15sp"
        android:textColor="#ffffff"
        android:layout_margin="10sp"
        android:layout_gravity="center"/>

</LinearLayout>

