<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.SubmissionsFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/content_layout"
            android:orientation="vertical">

        <!--Button
            android:id="@+id/submitbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SubmitActivity design in Competition"
            android:background="@drawable/sqr_factor_btn_color"
            android:textAllCaps="false"
            android:paddingLeft="5sp"
            android:paddingRight="5sp"
            android:paddingStart="5sp"
            android:paddingEnd="5sp"
            android:textColor="#fff"
            android:layout_marginBottom="20sp"
            android:layout_gravity="center"/-->

            <!--<TextView-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="How to submit designs in competition correctly?"-->
                <!--android:textColor="#000000"-->
                <!--android:layout_marginBottom="15sp"/>-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end|right|center_vertical"
                android:layout_marginBottom="15sp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sort by: "
                    android:textColor="#000000"
                    android:layout_marginRight="20sp"
                    android:layout_marginEnd="20sp"/>

                <Spinner
                    android:layout_width="150sp"
                    android:layout_height="wrap_content"
                    android:foreground="@drawable/gray_border"
                    android:padding="5sp"
                    android:entries="@array/sort_by"/>

            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/submissions_rv"/>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:backgroundTint="@color/sqr"
        android:src="@drawable/ic_add_black_24dp"
        app:rippleColor="@android:color/white"
        android:clickable="true"
        android:focusable="true"/>

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pb"
        android:visibility="gone"
        android:layout_centerInParent="true"/>

</RelativeLayout>

