<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:layout_margin="16dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/event_title"
            android:layout_marginTop="20sp"
            android:layout_marginLeft="10sp"
            android:layout_marginStart="10sp"
            android:text="STROLLING DOWN THE VIHARAS"
            android:textColor="#000"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/event_startTimeAgo"
            android:layout_marginTop="2sp"
            android:layout_marginLeft="10sp"
            android:layout_marginStart="10sp"
            android:text="6 months ago"/>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/event_cover"
            android:src="@drawable/designimg2"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10sp"
            android:scaleType="fitStart"
            android:adjustViewBounds="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/event_desc"
            android:text="@string/Event"
            android:textColor="#000000"
            android:layout_marginTop="2sp"
            android:layout_marginLeft="10sp"
            android:layout_marginStart="10sp"/>

        <Button
            android:id="@+id/event_read_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:layout_marginStart="20sp"
            android:layout_marginTop="50sp"
            android:paddingLeft="10sp"
            android:paddingStart="10sp"
            android:paddingRight="10sp"
            android:paddingEnd="10sp"
            android:background="@drawable/sqr_factor_btn_color"
            android:text="Read More"
            android:textColor="#fff"
            android:textAllCaps="false"
            android:layout_marginBottom="20sp"/>

    </LinearLayout>

</android.support.v7.widget.CardView>