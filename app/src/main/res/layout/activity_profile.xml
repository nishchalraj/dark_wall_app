<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Activities.ProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/activity_toolbar"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/designimg"
                android:scaleType="fitStart"
                android:layout_alignParentLeft="true"
                android:adjustViewBounds="true"/>

            <ImageView
                android:layout_width="60sp"
                android:layout_height="60sp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="81dp"
                android:src="@drawable/profilepic" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="KEANU REEVES"
                android:textColor="#000"
                android:textSize="15sp"
                android:layout_marginTop="150sp"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4">

            <TextView
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="5"
                android:textColor="@color/sqr"
                android:gravity="center"/>

            <TextView
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="2"
                android:textColor="@color/sqr"/>

            <TextView
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="3"
                android:textColor="@color/sqr"
                android:gravity="center"/>

            <TextView
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="21"
                android:textColor="@color/sqr"
                android:gravity="center"/>

            <TextView
                android:layout_width="40sp"
                android:layout_height="20sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4">

            <TextView
                android:id="@+id/blueprint"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Blueprint"
                android:gravity="center"
                android:textColor="@drawable/selector_follow"/>

            <TextView
                android:id="@+id/portfolio"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Portfolio"
                android:textColor="@drawable/selector_follow"/>

            <TextView
                android:id="@+id/followers"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Followers"
                android:gravity="center"
                android:textColor="@drawable/selector_follow"/>

            <TextView
                android:id="@+id/following"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Following"
                android:gravity="center"
                android:textColor="@drawable/selector_follow"/>

            <ImageView
                android:id="@+id/morebtn"
                android:layout_width="40sp"
                android:layout_height="20sp"
                android:src="@drawable/ellipsis"/>

        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            android:background="@drawable/edit_profile"
            android:textColor="#000"
            android:text="Edit Profile"
            android:paddingLeft="10sp"
            android:paddingStart="10sp"
            android:paddingRight="10sp"
            android:paddingEnd="10sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:background="@drawable/gray_border"
            android:weightSum="4"
            android:elevation="@dimen/cardview_default_elevation">

            <android.support.design.widget.TabLayout
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:id="@+id/tabs2"
                app:tabIndicatorColor="@android:color/transparent"
                android:layout_weight="3"
                app:tabTextAppearance="@style/TextAppearance.AppCompat.Small">

            </android.support.design.widget.TabLayout>

            <ImageView
                android:id="@+id/btn"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/ellipsis"
                android:padding="30sp"
                android:elevation="@dimen/cardview_default_elevation"/>

        </LinearLayout>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20sp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_marginStart="10sp"
            android:layout_marginEnd="10sp"
            android:layout_marginBottom="5sp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="10sp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="4"
                    android:focusableInTouchMode="true">

                    <ImageView
                        android:layout_width="0sp"
                        android:layout_height="60sp"
                        android:src="@drawable/profilepic"
                        android:layout_weight="1"
                        android:layout_marginTop="10sp"/>

                    <EditText
                        android:layout_width="0sp"
                        android:layout_height="150sp"
                        android:layout_weight="3"
                        android:hint="Share your thoughts here..."
                        android:gravity="top"
                        android:paddingLeft="10sp"
                        android:paddingStart="10sp"
                        android:paddingRight="10sp"
                        android:paddingEnd="10sp"
                        android:paddingTop="10sp"
                        android:background="@android:color/transparent"
                        android:layout_marginTop="10sp"
                        android:layout_marginRight="20sp"
                        android:layout_marginEnd="20sp"
                        android:textSize="15sp"
                        android:inputType="text"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20sp"
                    android:paddingTop="10sp"
                    android:paddingBottom="10sp"
                    android:weightSum="6">

                    <ImageView
                        android:layout_width="0sp"
                        android:layout_height="30sp"
                        android:src="@drawable/camera"
                        android:layout_marginLeft="20sp"
                        android:layout_marginStart="20sp"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="5"
                        android:scaleType="fitStart"/>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10sp"
                        android:layout_marginTop="10sp"
                        android:text="Post Status"
                        android:textAllCaps="false"
                        android:textColor="#fff"
                        android:background="@drawable/sqr_factor_btn_color"
                        android:textStyle="bold"
                        android:paddingLeft="10sp"
                        android:paddingRight="10sp"
                        android:paddingStart="10sp"
                        android:paddingEnd="10sp"
                        android:layout_gravity="end|center_vertical"/>

                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20sp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_marginStart="10sp"
            android:layout_marginEnd="10sp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <ImageView
                        android:layout_width="0sp"
                        android:layout_height="60sp"
                        android:src="@drawable/henry"
                        android:layout_weight="1"
                        android:layout_marginTop="10sp"
                        android:layout_marginLeft="10sp"
                        android:layout_marginStart="10sp"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="3"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10sp"
                        android:layout_marginStart="10sp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Henry Cavill"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textColor="#000"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5 minutes ago"
                            android:textStyle="bold"/>

                    </LinearLayout>

                    <ImageView
                        android:layout_width="20sp"
                        android:layout_height="match_parent"
                        android:layout_gravity="end"
                        android:src="@drawable/ellipsis"
                        android:layout_marginRight="5sp"
                        android:layout_marginLeft="5sp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5sp"
                    android:paddingLeft="10sp"
                    android:paddingStart="10sp"
                    android:paddingRight="10sp"
                    android:paddingEnd="10sp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Check out this new design, by me."
                        android:textStyle="bold"/>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/designimg"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50sp"
                    android:orientation="horizontal"
                    android:layout_marginTop="10sp"
                    android:weightSum="3">

                    <Button
                        android:id="@+id/like"
                        android:layout_width="0sp"
                        android:layout_height="50sp"
                        android:layout_weight="1"
                        android:text="Like"
                        android:textAllCaps="false"
                        android:textStyle="bold"
                        android:drawableLeft="@drawable/like_xml"
                        android:drawableStart="@drawable/like_xml"
                        android:background="@android:color/transparent"
                        android:paddingLeft="10sp"
                        android:paddingStart="10sp"
                        android:paddingRight="10sp"
                        android:paddingEnd="10sp"
                        android:textColor="@android:color/tertiary_text_dark"
                        android:gravity="start|center_vertical"
                        android:drawablePadding="10sp"/>

                    <Button
                        android:id="@+id/comment"
                        android:layout_width="0sp"
                        android:layout_height="50sp"
                        android:layout_weight="1"
                        android:text="Comment"
                        android:textAllCaps="false"
                        android:textStyle="bold"
                        android:drawableLeft="@drawable/comment_xml"
                        android:drawableStart="@drawable/comment_xml"
                        android:background="@android:color/transparent"
                        android:textColor="@android:color/tertiary_text_dark"
                        android:gravity="start|center_vertical"
                        android:drawablePadding="10sp"/>

                    <Button
                        android:id="@+id/share"
                        android:layout_width="0sp"
                        android:layout_height="50sp"
                        android:layout_weight="1"
                        android:text="Share"
                        android:textAllCaps="false"
                        android:textStyle="bold"
                        android:drawableLeft="@drawable/share_xml"
                        android:drawableStart="@drawable/share_xml"
                        android:background="@android:color/transparent"
                        android:textColor="@android:color/tertiary_text_dark"
                        android:gravity="start|center_vertical"
                        android:drawablePadding="10sp"/>

                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20sp"
            app:cardElevation="1sp"
            app:cardBackgroundColor="#e6ecf5"
            android:layout_marginBottom="2sp"
            android:layout_marginLeft="10sp"
            android:layout_marginStart="10sp"
            android:layout_marginRight="10sp"
            android:layout_marginEnd="10sp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10sp"
                    android:orientation="horizontal"
                    android:weightSum="5">

                    <ImageView
                        android:layout_width="0sp"
                        android:layout_height="60sp"
                        android:src="@drawable/henry"
                        android:layout_weight="1"
                        android:layout_marginTop="10sp"
                        android:layout_marginLeft="10sp"
                        android:layout_marginStart="10sp"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="4"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10sp"
                        android:layout_marginStart="10sp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Henry Cavill"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textColor="#000"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5 minutes ago"
                            android:textStyle="bold"/>

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nice work there!"
                    android:textStyle="bold"
                    android:layout_marginLeft="20sp"
                    android:layout_marginStart="20sp"/>

                <Button
                    android:id="@+id/like2"
                    android:layout_width="100sp"
                    android:layout_height="50sp"
                    android:text="Like"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:drawableLeft="@drawable/like_xml"
                    android:drawableStart="@drawable/like_xml"
                    android:background="@android:color/transparent"
                    android:paddingLeft="20sp"
                    android:paddingStart="20sp"
                    android:paddingRight="20sp"
                    android:paddingEnd="20sp"
                    android:textColor="@android:color/tertiary_text_dark"
                    android:gravity="start|center_vertical"
                    android:drawablePadding="10sp"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:layout_marginStart="10sp"
            android:layout_marginRight="10sp"
            android:layout_marginEnd="10sp"
            android:layout_marginBottom="10sp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20sp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="60sp"
                        android:layout_height="60sp"
                        android:src="@drawable/profilepic"
                        android:layout_marginTop="10sp" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="60sp"
                        android:layout_marginStart="10sp"
                        android:layout_marginLeft="10sp"
                        android:layout_marginRight="10sp"
                        android:layout_marginEnd="10sp"
                        android:layout_marginTop="10sp"
                        android:hint="Write comment..."
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:background="@drawable/gray_border"
                        android:padding="10sp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10sp"
                    android:layout_marginEnd="10sp"
                    android:layout_marginBottom="10sp"
                    android:orientation="horizontal"
                    android:gravity="end">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10sp"
                        android:text="Post Reply"
                        android:textAllCaps="false"
                        android:textColor="#fff"
                        android:background="@drawable/sqr_factor_btn_color"
                        android:textStyle="bold"
                        android:paddingLeft="10sp"
                        android:paddingRight="10sp"
                        android:paddingStart="10sp"
                        android:paddingEnd="10sp"
                        android:layout_gravity="end|center_vertical"/>

                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:layout_marginStart="10sp"
            android:layout_marginRight="10sp"
            android:layout_marginEnd="10sp"
            android:layout_marginBottom="10sp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10sp"
                    android:text="Personal Info"
                    android:textColor="#000"
                    android:textSize="20sp"
                    android:background="@drawable/gray_border"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Keanu Reeves"
                    android:textColor="#000"
                    android:textSize="15sp"
                    android:padding="10sp"
                    android:layout_marginBottom="10sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Followers:"
                    android:textColor="#000"
                    android:textSize="12sp"
                    android:padding="10sp"
                    android:layout_marginBottom="10sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:textSize="12sp"
                    android:layout_marginLeft="10sp"
                    android:layout_marginStart="10sp"
                    android:layout_marginBottom="10sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Following:"
                    android:textColor="#000"
                    android:textSize="12sp"
                    android:padding="10sp"
                    android:layout_marginBottom="10sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="21"
                    android:textSize="12sp"
                    android:layout_marginLeft="10sp"
                    android:layout_marginStart="10sp"
                    android:layout_marginBottom="10sp"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

</ScrollView>